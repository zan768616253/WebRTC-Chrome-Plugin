{
    "name" : "Seekers Stream Plugin",
    "author": "SeekersAdvisors",
    "version" : "0.1",
    "manifest_version" : 2,
    "minimum_chrome_version": "34",
    "description" : "Capture full-screen or specific application's screen on any HTTPs domain!",
    "background": {
        "scripts": [
            "background-script.js",
            "background/background.common.js",
            "background/background.js",
            "background/background.desktopCapture.js",
            "background/background.tabCapture.js",
            "background/background.badgeText.js",
            "background/background.getUserMedia.js",
            "background/background.players.js",
            "RecordRTC/MediaStreamRecorder.js",
            "RecordRTC/DiskStorage.js"
        ],
        "persistent": false
    },
    "content_scripts": [ {
       "js": [ "content-script.js" ],
       "all_frames": true,
       "run_at": "document_end",
       "matches": ["http://localhost:8443/*", "http://localhost:9000/*", "http://localhost:3000/*", "http://192.168.24.160:3000/*"]
    }],
    "browser_action":{  
        "default_icon":"images/main-icon.png",
        "default_title":"Record Your Screen, Tab or Camera"
     },
    "icons" : {
        "16":"images/main-icon.png",
        "22":"images/main-icon.png",
        "32":"images/main-icon.png",
        "48":"images/main-icon.png",
        "128":"images/main-icon.png"
    },
    "permissions": [
        "desktopCapture",
        "storage",
        "tabs",
        "tabCapture",
        "activeTab",
        "identity"
    ],
    "web_accessible_resources": [
        "images/main-icon.png",
        "icon.png"
    ],
    "options_ui":{  
        "page":"options.html",
        "chrome_style":false,
        "open_in_tab": true
     }
}